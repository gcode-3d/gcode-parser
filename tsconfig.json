{
    "compilerOptions": {
        "outDir": "./out",
        "allowJs": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true
    },
    "include": ["./src/**/*"]
}
